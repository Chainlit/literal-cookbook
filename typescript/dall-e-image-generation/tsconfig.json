{
    "include": ["*.ts"],
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
